<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <script
      src="https://kit.fontawesome.com/7700e0d7d8.js"
      crossorigin="anonymous"
    ></script>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <link rel="stylesheet" href="css/styles.min.css" />
    <title>Post It App</title>
  </head>
  <body>
    <div class="wrapper">
      <div class="wrapper-content">
        <header>
          <form action="/add" method="post">
            <input type="text" name="post" placeholder="Enter post" />
            <button>Add</button>
          </form>
        </header>

        <main>
          <% for(let post of data) { %>
          <article>
            <p><%= post.post %></p>
            <div class="article-btns">
              <form action="/delete/<%= post._id %>" method="post">
                <button><i class="fas fa-trash-alt delete"></i></button>
              </form>
              <form action="/edit/<%= post._id %>" method="post">
                <button><i class="fas fa-pencil-alt edit"></i></button>
              </form>
            </div>
          </article>
          <% } %>
        </main>
      </div>
    </div>
  </body>
</html>
